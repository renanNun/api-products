{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./", 
    "paths": {
        "@errors/*": [
            "./src/shared/errors/*"
        ],
        "@config/*": [
            "./src/config/*"
        ],
        "@shared/*": [
            "./src/shared/*"
        ],
        "@database/*": [
            "./src/shared/database/*"
        ],
        "@modules/*": [
            "./src/modules/*"
        ]
    }, 
    "types": [
        "@types",
        "./node_modules/@types"
    ], 
    "resolveJsonModule": true, 
    "allowJs": true,
    "outDir": "build",
    "noEmit": true, 
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,  
    "strict": true,       
    "noImplicitAny": true,          
    "strictPropertyInitialization": false,    
    "skipDefaultLibCheck": true,              
    "skipLibCheck": true                      
  }
}
